@using MambaWeb.Models;
@{
    int count = 1;
}
@model List<Team >

<div class="container justify-content-between">
    <h1>Teams</h1>
    <a class="btn btn-primary" asp-action="Create">Create</a>
</div>
<div class="container justify-content-center">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Fullname</th>
                <th scope="col">Profession</th>
                <th scope="col">Image</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                    <tr>
                        <td>@count</td>
                        <td>@item.Fullname</td>
                        <td>@item.Profession</td>
                        <td>
                            <img src="~/upload/employee/@item.ImgUrl" width="200" height="220"/>
                        </td>
                        <td>
                            <a class="btn btn-info" asp-action="Update" asp-route-id="@item.Id">Update</a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Create</a>
                        </td>

                    </tr>
                count++;
            }


        </tbody>
    </table>
    <div asp-validation-summary=All class="text-danger"></div>
</div>